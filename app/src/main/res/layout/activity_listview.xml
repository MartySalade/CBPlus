<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adapter">

        <LinearLayout
            android:id="@+id/principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp">

                <ImageView
                    android:id="@+id/foodImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/diet"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/displayName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/black"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="14dp"
                            android:autoSizeMaxTextSize="20dp"
                            android:autoSizeStepGranularity="2dp"
                            android:textStyle="bold"
                            android:text="Danette"
                            android:maxLines="1"
                            app:layout_constraintBottom_toTopOf="@id/displayGTIN"></TextView>

                        <TextView
                            android:id="@+id/displayDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:autoSizeMinTextSize="12dp"
                            android:autoSizeMaxTextSize="19dp"
                            android:autoSizeStepGranularity="2dp"
                            android:textStyle="bold"
                            android:text="27/05/2021"
                            android:maxLines="1"
                            app:layout_constraintTop_toBottomOf="@id/displayGTIN"></TextView>



                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/displayGTIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:autoSizeMinTextSize="14dp"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeStepGranularity="2dp"
                    android:textStyle="bold"
                    android:text="09657"
                    android:maxLines="1"
                    app:layout_constraintTop_toBottomOf="@id/displayName"></TextView>

                <TextView
                    android:id="@+id/displayType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:autoSizeMinTextSize="12dp"
                    android:autoSizeMaxTextSize="19dp"
                    android:autoSizeStepGranularity="2dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    app:layout_constraintTop_toBottomOf="@id/displayDate"></TextView>

        </LinearLayout>

        </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>